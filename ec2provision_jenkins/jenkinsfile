pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('AKIAVD4HEOGKVAWGD3R7')
        AWS_SECRET_ACCESS_KEY = credentials('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')
        AWS_REGION = 'us-east-1'
    }

 
    stages {
        stage('Checkout Terraform Code') {
            steps {
                git branch: 'main', url: 'https://github.com/BuddoluAnoopKumar/My_terraform_projects.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('ec2provision_jenkins') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('ec2provision_jenkins') {
                    sh 'terraform plan main.tf'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('ec2provision_jenkins') {
                    sh 'terraform apply main.tf --auto-approve'
                }
            }
        }
    }
}
